{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "types": [
      "cypress",
      "vitest/globals",
      "node"
    ],
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },
    "isolatedModules": false
  },
  "include": [
    "./e2e/**/*",
    "./support/**/*"
  ],
  "exclude": [
    "./support/component.*"
  ]
}
